<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_artist">

    <fragment
        android:id="@+id/navigation_artist"
        android:name="com.andes.vinilos.ui.ArtistFragment"
        android:label="@string/title_artist"
        tools:layout="@layout/fragment_artist" />

    <fragment
        android:id="@+id/navigation_options"
        android:name="com.andes.vinilos.ui.OptionsFragment"
        tools:layout="@layout/fragment_options" >
        <action
            android:id="@+id/action_navigation_options_to_createAlbumFragment"
            app:destination="@id/createAlbumFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_albums"
        android:name="com.andes.vinilos.ui.AlbumsFragment"
        android:label="@string/title_albums"
        tools:layout="@layout/fragment_albums" />
    <fragment
        android:id="@+id/createAlbumFragment"
        android:name="com.andes.vinilos.ui.SaveAlbumFragment"
        android:label="fragment_create_album"
        tools:layout="@layout/fragment_create_album" />
</navigation>